<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/minItemStyle"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLine"
        android:background="@color/item_line"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/captionTV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="备注"
        android:textSize="@dimen/text_big"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/valuesET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/itemPadding"
        android:layout_toRightOf="@id/captionTV"
        android:background="@null"
        android:gravity="center_vertical|right"
        android:hint="请输入(必填)"
        android:textColor="@color/textColorNormal"
        android:textSize="@dimen/text_big"/>
</RelativeLayout>