<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/baseStyle"
    tools:context="com.gxut.bitliker.usoftchinauu.ui.activity.InputWorkActivity">

    <RelativeLayout
        style="@style/minItemStyle">

        <TextView
            android:id="@+id/location_tv"
            style="@style/itemTextTagStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="位   置"/>

        <TextView
            android:id="@+id/locationTV"
            style="@style/itemTextStyle"
            android:layout_toRightOf="@id/location_tv"
            android:drawableRight="@drawable/icon_next"
            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/minItemStyle">

        <TextView
            android:id="@+id/address_tv"
            style="@style/itemTextTagStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="地   址"/>

        <TextView
            android:id="@+id/addressTV"
            style="@style/itemTextStyle"
            android:layout_toRightOf="@id/address_tv"/>
    </RelativeLayout>


    <RelativeLayout
        style="@style/minItemStyle">

        <TextView
            android:id="@+id/type_tv"
            style="@style/itemTextTagStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="类   型"/>

        <TextView
            android:id="@+id/typeTV"
            style="@style/itemTextStyle"
            android:layout_toRightOf="@id/type_tv"
            android:drawableRight="@drawable/icon_next"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/minItemStyle">

        <TextView
            android:id="@+id/distance_tv"
            style="@style/itemTextTagStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="距   离"/>

        <TextView
            android:id="@+id/distanceTV"
            style="@style/itemTextStyle"
            android:layout_toRightOf="@id/distance_tv"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/minItemStyle">

        <TextView
            android:id="@+id/time_able_tv"
            style="@style/itemTextTagStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="是否显示时间"/>

        <com.gxut.bitliker.usoftchinauu.ui.widget.SwitchView
            android:id="@+id/timeAbleSv"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timeRl"
        style="@style/minItemStyle"
        android:visibility="gone">

        <TextView
            android:id="@+id/time_tv"
            style="@style/itemTextTagStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="时   间"/>

        <TextView
            android:id="@+id/timeTV"
            style="@style/itemTextStyle"
            android:layout_toRightOf="@id/time_tv"
            android:drawableRight="@drawable/icon_next"/>
    </RelativeLayout>


</LinearLayout>
