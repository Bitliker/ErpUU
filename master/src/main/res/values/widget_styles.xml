<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="baseStyle">
        <item name="android:background">@color/base_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="normalItemStyle">
        <item name="android:background">@drawable/normal_item_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/itemHeight</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="minItemStyle" parent="normalItemStyle">
        <item name="android:layout_height">@dimen/itemHeightMin</item>
    </style>

    <style name="itemTextTagStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxWidth">100dp</item>
    </style>

    <style name="itemTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/textColorNormal</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="inputformTagTextStyle" parent="itemTextStyle">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:layout_marginLeft">@dimen/itemPadding</item>
        <item name="android:lines">1</item>
    </style>

    <style name="commonCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_button</item>
    </style>


</resources>